<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/corSecundaria</item>
        <item name="colorPrimaryDark">@color/corSecundaria</item>
        <item name="colorAccent">@color/corSecundaria</item>
    </style>

    <style name="button_login">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/style_button_login</item>
    </style>

    <style name="button_cadastrar">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/style_button_cadastrar</item>
    </style>

    <style name="editText_login">
        <item name="colorControlActivated">@color/corSecundaria</item>
        <item name="colorControlHighlight">@color/corSecundaria</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorHint">@color/corPrimaria</item>
        <item name="android:textColorHighlight">@color/corPrimaria</item>
        <item name="android:textColorLink">@color/corPrimaria</item>
        <item name="colorAccent">@color/corSecundaria</item>
        <item name="colorControlNormal">@color/corSecundaria</item>
        <item name="colorControlActivated">@color/corSecundaria</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/corPrimaria</item>
    </style>

</resources>
