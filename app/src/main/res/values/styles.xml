<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_login">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/style_button_login</item>
    </style>

    <style name="button_cadastrar">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/style_button_cadastrar</item>
    </style>

    <style name="editText_login">
        <item name="colorControlActivated">@color/corSecundaria</item>
        <item name="colorControlHighlight">@color/corSecundaria</item>
    </style>

</resources>
